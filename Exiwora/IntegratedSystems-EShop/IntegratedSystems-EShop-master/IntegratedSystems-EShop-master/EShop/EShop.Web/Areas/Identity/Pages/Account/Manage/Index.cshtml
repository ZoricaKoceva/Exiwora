<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            @*<div class="col-xl-6 col-md-12">*@
            <div class="col">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25"> <img src="~/Content/images/account-icon.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <h6 class="f-w-600" style="font-weight:bold">@User.Identity.Name.Split('@')[0]</h6>
                                @* <p></p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>*@
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.Username</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">
                                            <input asp-for="Input.PhoneNumber" class="form-control" />
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                        </h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Settings</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <a class="btn btn-exiwora-peach @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Change email</a>
                                        @*<p class="m-b-10 f-w-600">Change email</p>
                                    <h6 class="text-muted f-w-400">Sam Disuja</h6>*@
                                    </div>
                                    <div class="col-sm-6">
                                        <a class="btn btn-exiwora-peach @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Change Password</a>
                                        @*<p class="m-b-10 f-w-600">Most Viewed</p>
                                    <h6 class="text-muted f-w-400">Dinoter husainm</h6>*@
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a class="btn btn-exiwora @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication" style="margin-right:10em">Two-factor authentication</a></li>
                                    <li><a class="btn btn-exiwora @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
                                    @*<li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





