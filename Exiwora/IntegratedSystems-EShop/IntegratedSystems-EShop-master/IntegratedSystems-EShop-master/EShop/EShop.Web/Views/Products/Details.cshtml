                <div style="margin-bottom:1.5em">
                    <p class="display-4" style="display:inline-block; font-size: 2em; font-weight:400">Rating: </p>

                    @if (Model.Rating < 2)
                    {
            <img src="~/Content/images/palette-rating-1.png" style="width: 15%" />}

                    @if (Model.Rating >= 2 && Model.Rating < 3)
                    {
            <img src="~/Content/images/palette-rating-2.png" style="width: 15%" />}

                    @if (Model.Rating >= 3 && Model.Rating < 4)
                    {
            <img src="~/Content/images/palette-rating-3.png" style="width: 15%" />}

                    @if (Model.Rating >= 4 && Model.Rating < 5)
                    {
            <img src="~/Content/images/palette-rating-4.png" style="width: 15%" />}

                    @if (Model.Rating >= 5)
                    {
            <img src="~/Content/images/palette-rating-5.png" style="width: 15%" />}
                </div>

                <div style="margin-bottom: 2em;">
                    <h4 style="margin-right: 1em; display: inline-block;"> @Html.DisplayFor(model => model.ProductPrice) <span class="badge badge-secondary">MKD</span></h4>
                    <a asp-controller="Products" asp-action="AddProductToCard" asp-route-id="@Model.Id" class="btn btn-exiwora-peach">Add to Cart</a>
                </div>

                <p class="lead">
                    @Html.DisplayFor(model => model.ProductDescription)
                </p>

                <p class="display-4" style="font-size:1.5em">Rate this painting: </p>

                <div class="form-check">

                    <div style="display: inline-block; margin-left: 1em; margin-right: 1.5em;">
                        <input class="form-check-input" type="radio" name="productRating" id="productRating1" value="1" checked>
                        <label class="form-check-label" for="productRating1">
                            1
                        </label>
                    </div>


                    <div style="        display: inline-block;
