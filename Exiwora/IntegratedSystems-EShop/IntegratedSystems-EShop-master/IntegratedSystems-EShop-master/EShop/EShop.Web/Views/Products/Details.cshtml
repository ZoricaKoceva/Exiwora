                        <input class="form-check-input" type="radio" name="productRating" id="productRating5" value="5">
                        <label class="form-check-label" for="productRating5">
                            5
                        </label>
                    </div>

                </div>

                <hr />
                @*<textarea id="commentArea" class="form-control" placeholder="Leave a comment here" style="margin-bottom: 1em;"></textarea>
                <br />
                <button class="btn btn-exiwora">Post the comment</button>*@

                @using (Html.BeginForm("AddComment","Products"))
                {
                    @Html.Hidden("id",Model.Id)
                    @Html.TextArea("comment", Model.Comments, new { @class="form-control", @placeholder = "Leave a comment here"})
                    <br />
                    <input type="submit" class="btn btn-exiwora" value="Post the comment" />
                }

                <hr />

                <div class="comments" style="margin-bottom: 2em">
                    <p class="display-4" style="font-size: 2em; font-weight: 400"></p>
                    @if (Model.Comments != null)
                    {
                        <p class="display-4" style="font-size: 1.5em">@Model.Comments</p>
                    }
                </div>

            </div>

            </div>
        </div>
    </div>


